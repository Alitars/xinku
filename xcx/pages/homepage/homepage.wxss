/* pages/homepage/homepage.wxss */
page{
  background-color: rgb(248, 249, 249);
}
.topback{
  position: relative;
  width: 100%;
  background-image: url(https://xinkush.vipcaihui.cn/image/M00/00/05/rB_sZV9yp_-AYEh9AAArYMe9EKY245.png);
  background-repeat:no-repeat;
  background-size:100% 100%;
}
.bannerstyle{
  padding: 0 32rpx;
  border-radius: 10rpx;
}
.swiper{
  height:300rpx; 
  width:100%;
}
.banner{
  height: 300rpx;
  width: 100%;
}
.adress{
  font-size: 26rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
  color: #fff;
}
.abs{
  position: absolute;
  height: 26rpx;
  width: 20rpx;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}
.abssign{
  position: absolute;
  height: 24rpx;
  width: 26rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}
.signIn{
  font-size: 26rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
  color: #fff;
}
.nav{
  margin: 0 32rpx;
  margin-top: 30rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  text-align: center;
  border-radius: 10rpx;
  background-color: #fff;
}
.navimg{
  height: 80rpx;
  width: 80rpx;
}
.flex-item{
  width: 20%;
}
.flex-item view{
  font-size: 24rpx;
  color: #5E8FB5;
}

.fl{
  float: left;
}
.fr{
  float: right;
}
.clearfix:after {
  content:""; 
  display: block; 
  clear:both; 
}
.toptit{
  margin-top:30rpx;
  padding-left:32rpx;
  box-sizing: border-box;
  height: 34rpx;
  line-height: 34rpx;
}
.guess{
  font-size: 34rpx;
  font-weight: 600;
}
.more{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #40A9FF;
  position: relative;
}
.titimg{
  position: absolute;
  height: 24rpx;
  width: 24rpx;
  right: -32rpx;
  top: 50%;
  transform: translateY(-50%);
}
/* 猜你喜欢 */
.like{
  height: 100%;
  padding: 10rpx 32rpx;
  box-sizing: border-box;
}
.work{
  margin-top:20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 10rpx 10rpx 0px rgba(0,0,0,0.04);
}
.small-img{
  height: 120rpx;
  width: 120rpx;
  border-radius: 10rpx;
}
.pro-left{
  text-align: center;
  font-size: 24rpx;
  width: 120rpx;
}
.pro-detail{
  width: calc(100% - 120rpx);
}
.checktext{
  text-align: center;
  font-size: 20rpx;
  color: #40A9FF;
  height: 26rpx;
  line-height: 26rpx;
  padding: 5rpx;
  border: 2rpx solid #e6dede;
  border-radius: 16rpx;
}
.checkt{
  display: inline-block;
  vertical-align:middle;
}
.check{
  height: 20rpx;
  width: 20rpx;
  vertical-align:middle;
}
.ellipsis{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis; 
  overflow: hidden; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 1;
}
.l-h{
  height: 42rpx;
  line-height: 42rpx;
}
.distance{
  margin-top: 24rpx;
}
.f-l{
  float: left;
  font-size: 24rpx;
  margin-left: 24rpx;
  color: #7B7B7B;
}
.text{
  font-size: 32rpx;
}
.alc{
  text-align: left;
}
.date{
  font-size: 20rpx;
  color: #7B7B7B;
  text-align: right;
}
.money{
  margin-top: 24rpx;
}
.money-left{
  float: left;
  font-size: 24rpx;
  color: #E90000;
  margin-left: 20rpx;
}
.money-right{
  float: right;
  font-size:20rpx ;
  color: #7B7B7B;
  margin-left: 40rpx;
}
/* 加载 */
.nohide{
  text-align: center;
  margin-top: 20rpx;
}
.hide{
  display: none;
}
.fixed{
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 99;
}
.tl{
  text-align: left;
  padding-left:30rpx ;
}
